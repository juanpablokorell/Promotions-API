services:
  mongo1:
    container_name: mongodatabase
    image: mongo
    ports:
    - published: 27018
      target: 27017
  promotions.api:
    build:
      context: D:\Challenge Fravega\Promotions.App.Backend
      dockerfile: Promotions.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Promotions.API
      target: base
    container_name: Promotions.API
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages;/root/.nuget/fallbackpackages2
    image: promotionsapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages --additionalProbingPath
        /root/.nuget/fallbackpackages2  "/app/bin/Debug/netcoreapp3.1/Promotions.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - target: 80
    - target: 443
    tty: true
    volumes:
    - D:\Challenge Fravega\Promotions.App.Backend\Promotions.API:/app:rw
    - C:\Users\juanp\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\juanp\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\juanp\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages:ro
    - D:\Microsoft\Xamarin\NuGet:/root/.nuget/fallbackpackages2:ro
    - C:\Users\juanp\.nuget\packages:/root/.nuget/packages:ro
    - D:\Challenge Fravega\Promotions.App.Backend:/src:rw
version: '3.4'